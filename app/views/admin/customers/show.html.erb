<div class="container">
    <h4 class="m-4"><span style="background-color:#eeeeee">
        <%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細
    </span></h4>
</div>
<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-borderless">
                <tbody>
                    <tr>
                        <td>会員ID</td>
                        <td><%= @customer.id %></td>
                    </tr>
                    <tr>
                        <td>氏名</td>
                        <td><%= @customer.first_name %><%= @customer.last_name %></td>
                    </tr>
                    <tr>
                        <td>フリガナ</td>
                        <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
                    </tr>
                    <tr>
                        <td>郵便番号</td>
                        <td><%= @customer.postal_code %></td>
                    </tr>
                    <tr>
                        <td>住所</td>
                        <td><%= @customer.address %></td>
                    </tr>
                    <tr>
                        <td>メールアドレス</td>
                        <td><%= @customer.email %></td>
                    </tr>
                    <tr>
                        <td>会員ステータス</td>
                        <% if @customer.is_deleted ==false %>
                        <td>有効</td>
                        <% else %>
                        <td>退会</td>
                        <% end %>
                    </tr>
                </tbody>
                <tr>
                    <td></td>
                    <td>
                        <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %>
                        <%= link_to "注文履歴一覧を見る", admin_path, class: "btn btn-primary" %>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>