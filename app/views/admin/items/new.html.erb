<%= form_with model: @item, url: '/admin/items', method: :post do |f| %>
  <div class="container">
    <h4 class="m-4"><span style="background-color:#eeeeee">商品新規登録</span></h4>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-2"> </div>
      <div class="col-15">
        <table class="table table-borderless">
          <tr>
            <td>商品画像</td>
            <td>
              <%= f.file_field :image, accept: "image/*" %>
            </td>
          </tr>
          <tr>
            <td>商品名</td>
            <td>
              <%= f.text_field :name, placeholder: "商品名" %>
            </td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td>
              <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %>
            </td>
          </tr>
          <tr>
          <td>ジャンル</td>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択して下さい --" %></td>
        </tr>
          <tr>
            <td>税抜き価格</td>
            <td>
              <%= f.text_field :price, placeholder:"1000" %>円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td> 
              <%= f.radio_button :is_active, true %> 
                <%= f.label :is_active, "販売中" %> 
                  <%= f.radio_button :is_active, false %> 
                    <%= f.label :is_active, "販売停止中" %>
            </td>
          </tr>
        </table>
        <div class="row justify-content-center">
        <%= f.submit '新規登録', class: 'btn btn-success px-4' %>
        </div>
          <% end %>
      </div>
    </div>
  </div>