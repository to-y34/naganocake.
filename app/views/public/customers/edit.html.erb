<div class="container">
  <div class="row pt-5">
      <%= form_with model: @customer, url: customers_infomation_path, method: :patch do |f| %>

    <h4>会員登録情報編集</h4>
    <table>
      <tr>
        <td>氏名</td>
        <td><%= f.label :name, "(姓)" %></td>
        <td><%= f.text_field :last_name, autocomplete: "last_name" %></td>
        <td><%= f.label :name, "(名)" %></td>
        <td><%= f.text_field :first_name,  autocomplete: "first_name" %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= f.label :name, "(セイ)" %></td>
        <td><%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %></td>
        <td><%= f.label :name, "(メイ)" %></td>
        <td><%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %></td>
      </tr>
      <tr>
        <td>郵便番号(ハイフンなし)</td>
        <td></td>
        <td><%= f.text_field :postal_code, autocomplete: "postcode" %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td>住所</td>
        <td></td>
        <td><%= f.text_field :address, autocomplete: "adderss" %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td>電話番号(ハイフンなし)</td>
        <td></td>
        <td><%= f.text_field :telephone_number, autocomplete: "phone_number" %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        <td></td>
        <td></td>
      </tr>

    </table>
    <table>
      <div class="row">
        <div class="col-md-6 mt-3 mb-8">
          <%= f.submit "編集内容を保存", class: "btn btn-success ml-5" %>
          <% end %>
        </div>
        <div class="col-md-4 offset-md-2 mt-3 mb-5">
          <%= link_to "退会する", customers_cancel_path, class: "btn btn-danger" %>

        </div>
      </div>