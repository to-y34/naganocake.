<div class="container">
  <h4 class="m-4"><span style="background-color:#eeeeee">商品詳細</span></h4>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="text-center col-5">
      <%= image_tag @item.image, size: "200x200" %>
    </div>
    <div class="col-7">
      <table class "table table-borderless">
        <tr>
          <td class="col-6">商品名</td>
          <td>
            <%= @item.name %>
          </td>
        </tr>
        <tr>
          <td class="col-6">商品説明</td>
          <td>
            <%= @item.introduction %>
          </td>
        </tr>
        <tr>
          <td class="col-6">ジャンル</td>
          <td>
            <%= @item.genre.name %>
          </td>
        </tr>
        <tr>
          <td class="col-6">税込価格</td>
          <td><%= @item.price %></td>
        </tr>
        <tr>
          <td class="col-6">販売ステータス</td>
          <td> 
            <% if @item.is_active == true %> 
              <p class="text-success font-weight-bold">販売中</p> 
              <% else %> 
                <p class='text-secondary font-weight-bold'>販売停止中</p> 
                <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
</div>
<div class="row justify-content-center">
  <%= link_to "編集する", edit_admin_item_path(@item.id), class: 'btn btn-success px-4' %>
</div>